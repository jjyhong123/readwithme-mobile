<div class="container">

  <div class="row">
    <div class="col-md-12">
      <h1>Convert your image to lifelike speech.</h1>
    </div>
  </div>

  <br />
  <div class="row">
    <div class="col-md-12">
      <div class="card-deck">

        <div class="card mb-3">
          <div class="card-header">Upload document or enter text here</div>
          <div class="card-body">
            <h5 class="card-title">File upload</h5>
            <!-- File upload -->
            <div class="input-group">
              <form action="/api/add" method="post" enctype="multipart/form-data">
                <input type="file" name="image" accept="image/*" capture="camera" id="imgInp" />
                <button class="btn btn-dark" type="submit">Upload</button>
              </form>
            </div>

            <!-- Image thumbnail 
            {{#if image}}
            <img src="{{image}}" alt="Selected image thumbnail" height="100px" width="100px"> {{/if}}
            -->

            <img src="#" id="blah" alt="Selected image thumbnail" height="100px" width="100px">

            <br /> {{#if src}}
            <!-- Translate 
            <form action="/api/translate" method="post">
              <div class="form-group">
                <label for="language">Select two letter language code:</label>
                <select class="form-control" name="targetLang" id="language">
                  <option>en</option>
                  <option>es</option>
                  <option>ko</option>
                  <option>hi</option>
                </select>
                <input type="hidden" name="text" value="{{text}}" />
                <input type="hidden" name="image" value="{{image}}" />
              </div>
              <button type="submit" class="btn btn-dark" style="float: right;">Translate</button>
            </form>
            -->
            <form action="/api/translate" method="post">
              <div class="form-group">
                <label for="language">Select language:</label>
                <select class="form-control" name="targetLang" id="language">
                  <option value="zh">Chinese (Mandarin)</option>
                  <option value="da">Danish</option>
                  <option value="nl">Dutch</option>
                  <option value="en">English (US)</option>
                  <option value="fr">French</option>
                  <option value="hi">Hindi</option>
                  <option value="de">German</option>
                  <option value="is">Icelandic</option>
                  <option value="it">Italian</option>
                  <option value="ja">Japanese</option>
                  <option value="ko">Korean</option>
                  <option value="no">Norwegian</option>
                  <option value="pl">Polish</option>
                  <option value="pt">Portuguese (European)</option>
                  <option value="ro">Romanian</option>
                  <option value="ru">Russian</option>
                  <option value="es">Spanish (European)</option>
                  <option value="sv">Swedish</option>
                  <option value="tr">Turkish</option>

                </select>
                <input type="hidden" name="text" value="{{text}}" />
                <input type="hidden" name="image" value="{{image}}" />
              </div>
              <button type="submit" class="btn btn-dark" style="float: right;">Translate</button>
            </form>

            {{/if}}

          </div>
        </div>

        {{#if src}}
        <div class="card border-success mb-3">
          <div class="card-header">Now reading</div>
          <div class="card-body text-success">
            <p class="card-text">{{text}}</p>
          </div>

          <audio controls id="polly-audio">
            <source src={{src}} type="audio/mp3" />
            <p>Your browser doesn't support HTML5 audio. Here is a
              <a href={{src}}>link to the audio</a> instead.</p>
          </audio>

          {{#if user}}
          <form action="/db/save" method="post">

            <input type="hidden" name="pollyUrl" value="{{src}}" />
            <input type="hidden" name="text" value="{{text}}" />
            <input type="hidden" name="googleId" value="{{user.googleId}}" /> {{#if dbRedirect}}
            <p>Item successfully saved.</p>
            {{else}}
            <button class="btn btn-dark" type="submit" style="margin-left: 15px;">Save to library!</button>
            {{/if}}

          </form>
          {{/if}}

        </div>
        {{else}} {{#if err}}
        <div class="card border-danger mb-3">
          <div class="card-header">Now reading</div>
          <div class="card-body text-danger">
            <p class="card-text">{{err}}</p>
          </div>
        </div>

        {{else}}
        <div class="card mb-3">
          <div class="card-header">Now reading</div>
          <div class="card-body">
            <p class="card-text">No text submitted yet.</p>
          </div>
        </div>
        {{/if}} {{/if}}

      </div>
    </div>
  </div>

</div>